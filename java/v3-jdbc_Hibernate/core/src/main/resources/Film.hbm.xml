<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.elephorm.formation.core.entity.Film" table="MOVIE">
        <id name="id" column="ID">
            <generator class="identity">
                
            </generator>
        </id>
        <property name="titre" column="TITLE"/>
        <property name="nbExemplaires" column="COPIES"/>
        <property name="genre" column="MOVIE_TYPE"/>
        
        <many-to-one name="acteurPrincipal" column="MAIN_ACTOR_ID"/>
        
        <set name="acteurSecondaires" table="MOVIE_SEC_ACTORS">
            <key column="ID_MOVIE"/>
            <many-to-many class="com.elemphorm.formation.core.entity.Acteur" column="ID_ACTOR"/>
        </set>
    </class>

</hibernate-mapping>